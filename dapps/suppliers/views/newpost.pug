extends ../../templates/layout.pug
	
block content
	.area-container
		.area
			h2 New Lake Post
			.textlabelfield
				+requiredlabel('Post Name')
				input(id="postname",placeholder="Carrot Supply")
			.textlabelfield
				+requiredlabel('Post Description')
				input(id="postdesc",placeholder="One pallet of carrots, handle with care.")
			.textlabelfield
				+requiredlabel('Max Price')
				input(id="postmaxprice",placeholder="Â£100")
			.textlabelfield
				+requiredlabel('Expiry Time')
				input(id="postexp",placeholder="24h")
			.textlabelfield
				+requiredlabel('Start Location')
				.locinputrow
					input(id="poststartloclat",placeholder="Latitude")
					input(id="poststartloclng",placeholder="Longitude")
			.textlabelfield
				+requiredlabel('End Location')
				.locinputrow
					input(id="postendloclat",placeholder="Latitude")
					input(id="postendloclng",placeholder="Longitude")
			.buttonrow
				+jsmainbutton('prepostlogin','login','loginaction')
				+jsmainbutton('lake-post','Post!','done')

block styles
	link(rel='stylesheet', href='styles/newpost.css')

block scripts
	script(src="/js/newpost.js",type="module")