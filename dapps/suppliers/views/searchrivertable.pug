
mixin riverpostli(postid,postname,rivername,hasbid,price,bestprice)
	- let intpostid = parseInt('0x'+postid.substring(2).match(/../g).reverse().join(''));
	- let url = "window.location.href='/post-"+intpostid+"'"
	if hasbid==true
		tr.riverpostli(onclick=url)
			td.toblue !{postname}
			td.toitalic by !{rivername}
			td.riverpostbidprice.price
				div
					h2 !{price}
					span.bidcurrency eth
			td.riverpostbidprice.bestbid
				div
					h2 !{bestprice}
					span.bidcurrency eth
	else
		tr.riverpostli.postlinobid(onclick=url)
			td.toblue !{postname}
			td.toitalic by !{rivername}
			td.riverpostbidprice.price
				div
					h2 !{price}
					span.bidcurrency eth
			td.riverpostbidprice.bestbid
				div
					h2 ––
					span.bidcurrency eth

table.posttable
	thead.riverpostli
		th 
		th 
		th.prices Min Price
		th.prices Best Bid
	tbody
		if (searchresults.length)
			- for(let i = 0; i < searchresults.length; i+=1)
				if searchresults[i].bids.length>0
					+riverpostli(searchresults[i].id,searchresults[i].postName,searchresults[i].price,true,searchresults[i].price,100)
				else
					+riverpostli(searchresults[i].id,searchresults[i].postName,searchresults[i].poster.profileName,false,searchresults[i].price,'-')
		else
			tr.riverpostli.postlinobid
				td No Results!