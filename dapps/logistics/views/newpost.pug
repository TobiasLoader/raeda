extends ../../templates/layout.pug
	
block content
	.area-container
		.area
			h2 New River Post
			.textlabelfield
				+requiredlabel('Post Name')
				input(id="postname",placeholder="Boulder to Denver, 12 printers' worth of space.")
			.textlabelfield
				label Post Description
				input(id="postdesc",placeholder="12 meters squared of free floor area.")
			.textlabelfield
				+requiredlabel('Min Price')
				input(id="postminprice",placeholder="100 wei")
			.textlabelfield
				+requiredlabel('Expiry Date & Time')
				.inputrow
					input(id="postexp-time",type="time",value=currenttime)
					input(id="postexp-date",type="date",value=currentdate)
